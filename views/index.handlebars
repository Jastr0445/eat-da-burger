<h1>burgers</h1>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block added=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>order a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee"></label><br>
    <input type="radio" name="devoured" value="1" checked> devoured<br>
    <input type="radio" name="sleepy" value="0"> added
  </div>

  <button type="submit">Add </button>
</form>

